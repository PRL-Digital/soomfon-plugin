{
  "name": "soomfon-controller",
  "version": "0.1.0",
  "description": "Stream Deck-style controller for SOOMFON CN002-4B27 HID device",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:core && npm run build:renderer",
    "build:core": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "detect": "npx ts-node scripts/detect-device.ts",
    "capture": "npx ts-node scripts/capture-input.ts",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "keywords": [
    "soomfon",
    "hid",
    "stream-deck",
    "macro-pad",
    "tauri"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@tailwindcss/postcss": "^4.1.18",
    "@tauri-apps/cli": "^2.9.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "electron-store": "^8.2.0",
    "happy-dom": "^20.3.0",
    "node-hid": "^3.2.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "usb": "^2.16.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "axios": "^1.13.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  }
}
