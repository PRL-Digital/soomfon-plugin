{
  "name": "soomfon-controller",
  "version": "0.1.0",
  "description": "Stream Deck-style controller for SOOMFON CN002-4B27 HID device",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && npm run build:main && npm run build:preload && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:core && npm run build:main && npm run build:preload && npm run build:renderer",
    "build:core": "tsc -p tsconfig.json",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "detect": "npx ts-node scripts/detect-device.ts",
    "capture": "npx ts-node scripts/capture-input.ts",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.preload.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "soomfon",
    "hid",
    "stream-deck",
    "macro-pad",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "happy-dom": "^20.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.13.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-store": "^8.2.0",
    "node-hid": "^3.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  }
}
